<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de Ticket</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SystemTicket", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Usuario", "Index", "Usuario")</li>
                    <li>@Html.ActionLink("Asunto", "Index", "AsuntoTicket")</li>
                    <li>@Html.ActionLink("Categoria", "Index", "CategoriaTicket")</li>
                    <li>@Html.ActionLink("Ubicacion_Area", "Index", "Ubicacion_Area")</li>
                    <li>@Html.ActionLink("Ticket", "Index", "Ticket")</li>
                    @*
                        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    *@
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> @Session["tipo_usuario"] : @Session["usuario"]<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Login/CerrarSesion">Cerrar Session</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!--MODAL PARA VENTANAS EMERGENTES Y PAGINAS-->
    <div id="divContenedorModal">
        <div id="myModal" level="1" class="modal fade loading" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div id="modalPopup" class="modal-dialog modal-xs">
                <div class="modal-content overlay-wrapper">
                    <div id="divModalHeader" class="modal-header">
                        <button id="btnDismissModal" type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 id="headerModal" class="modal-title"></h4>
                    </div>
                    <div id="bodyModal" class="modal-body">
                    </div>
                    <div id="footerModal" class="modal-footer" style="display: none;">
                        @*<button id="btnGrabarModal" type="button" class="btn btn-primary btn-save">Grabar</button>
                            <button id="btnCancelarModal" type="button" class="btn btn-default btn-cancel" data-dismiss="modal">Cerrar</button>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
