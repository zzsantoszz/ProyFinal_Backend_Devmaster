@using DAO.Modelo;
@model BEAN.LoginBEAN

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Modal.cshtml";
}

<h2>Registrar nuevo Usuario</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label" for="User">Nombre de Usuario: </label>
            @Html.TextBoxFor(model => model.User, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="control-label" for="Pass">Password: </label>
            @Html.PasswordFor(model => model.Pass, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="control-label" for="nombre_tipo_usuario">Tipo de usuario: </label>
            <select class="form-control" name="nombre_tipo_usuario">
                @foreach (var item in ViewBag.ListaTipoUsuario)
                {
                    <option>@item.nombre_tipo_usuario</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Registrar" class="btn btn-success" />
        </div>
    </div>
}
