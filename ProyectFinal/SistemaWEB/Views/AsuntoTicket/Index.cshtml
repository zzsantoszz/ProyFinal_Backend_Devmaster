@using DAO.Modelo
@model List<tb_asunto_ticket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Asunto de Tickets: </h2>
<a onclick="modalCrearAsuntoTicket(this)" class="btn btn-info glyphicon glyphicon-user" title="Nuevo AsuntoTicket"></a>
<table class="table">
    <thead>
        <tr>
            <td>Id Asunto</td>
            <td>Codigo Asunto</td>
            <td>Descripcion Asunto</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.idAsunto_ticket</td>
                <td>@item.codigo_asunto</td>
                <td>@item.asunto_descripcion_ticket</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idAsunto_ticket }) |

                    @Html.ActionLink(" ", "Delete"
           , new { id = item.idAsunto_ticket }
           , new
           {
               @class = "btn btn-danger glyphicon glyphicon-remove",
               @title = "Eliminar",
               @onclick = "return confirm('Desea eliminar el asunto?');"
           }
           )
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $.getScript("/Scripts/jsAsuntoTicket.js")
        .done(function (script, textStatus) {
            //console.log(textStatus);
        })
        .fail(function (jqxhr, settings, exception) {
            console.log("Fallo carad de cript js.");
            console.log(exception);
        });
</script>

