@using BEAN
@model LoginBEAN
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginPage.cshtml";
}

<main class="container-principal">
    <div class="container">
        <div class="items bg d-none d-lg-block caja1">
            <!--<picture><img src="img/MEF_sede.png"></picture>-->
        </div>
        <div class="items bg-white caja2">
            <figure class="user-img">
                <img src="~/img/logo.png">
            </figure>
            <h1 class="titulo-bienvenido">Bienvenido</h1>
            <br>
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.User, htmlAttributes: new { @class = "form-control", @placeholder = "Nombre de usuario" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(model => model.Pass, htmlAttributes: new { @class = "form-control", @placeholder = "Contrasena" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Iniciar sesion" class="btn btn-primary" />
                    </div>
                </div>
            }
        </div>
    </div>
</main>
